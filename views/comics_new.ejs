<%- include("partials/header.ejs") %>
<div class="container">
    <form action="/comics" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" placeholder="e.g. Watchmen" autofocus>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" name="description">
        </div>
        <div class="form-group">
            <label for="image">Link to Image</label>
            <input type="text" class="form-control" name="image" placeholder="https://www.myimage.com">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

